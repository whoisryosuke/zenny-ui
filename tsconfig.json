{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strict": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "baseUrl": "./",
    "moduleResolution": "node",

    "paths": {
      "@zenny-ui/*": ["packages/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__stories__",
    "**/__tests__",
    "**/*.spec.ts",
    "**/*.stories.[tj]sx",
    "**/*.test.[tj]s"
  ]
}
